pipeline {
    agent any
    tools {
        maven "Maven"
        jdk "Java11"
    }
    stages {
        stage('Initialize'){
            steps{
                echo "PATH = /usr/share/maven/bin:${PATH}"
                echo "M2_HOME = /usr/share/maven"
            }
        }
        stage('Build') {
            steps {
                
                sh 'mvn -B -DskipTests clean package'
                echo"build finish"
                
                }
            }
         
      stage('Deploy') {
        steps {
            withCredentials([usernamePassword(credentialsId: 'wildfly-credentials', usernameVariable: 'WILDFLY_USERNAME', passwordVariable: 'WILDFLY_PASSWORD')]) {
            sh 'sudo scp target/ping.war ec2-user@172.31.46.193:/home/ec2-user/wildfly/standalone/deployments/'
            
            }
        
        echo "Deployment completed"
        
        }
     }
}
}

