pipeline {
    agent any
    tools {
        maven "Maven"
        jdk "Java11"
    }
    stages {
        stage('Initialize'){
            steps{
                echo "PATH = /usr/share/maven/bin:${PATH}"
                echo "M2_HOME = /usr/share/maven"
            }
        }
        stage('Build') {
            steps {
                
                sh 'mvn -B -DskipTests clean package'
                echo "build success and ok"
                }
            }
         post {
        success {
            // Actions to perform when the pipeline succeeds
            echo 'Build successful!'

            // You can add additional steps here, such as sending notifications or triggering downstream jobs
        }

        failure {
            // Actions to perform when the pipeline fails
            echo 'Build failed!'

            // You can add additional steps here, such as sending notifications or triggering downstream jobs
        }
    }
        }
     }
